<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:orientation="vertical"
    android:weightSum="3">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@mipmap/pic">
        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:background="@mipmap/back"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="爆弹怪猫"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:layout_alignStart="@id/type"
            android:layout_alignBottom="@id/name"
            android:layout_marginBottom="35dp"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="沈梦溪"
            android:textSize="25sp"
            android:textColor="#FFFFFF"
            android:layout_alignStart="@id/type"
            android:layout_alignBottom="@id/type"
            android:layout_marginBottom="25dp"/>
        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="法师"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:layout_alignStart="@id/info"
            android:layout_alignBottom="@id/info"
            android:layout_marginBottom="25dp"/>
        <LinearLayout
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/difficultly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="难度 4"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="20dp"/>
            <TextView
                android:id="@+id/skill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="技能 5"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="20dp"/>
            <TextView
                android:id="@+id/attack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="攻击 8"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="20dp"/>
            <TextView
                android:id="@+id/live"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="生存 5"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/skillTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="技能简介"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:id="@+id/skills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon"
            android:layout_marginEnd="10dp"
            android:tooltipText="测试"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon"
            android:layout_marginEnd="10dp"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon"
            android:layout_marginEnd="10dp"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon"
            android:layout_marginEnd="10dp"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon" />
    </LinearLayout>
    <TextView
        android:id="@+id/skillName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:text="暴躁节奏"/>
    <TextView
        android:id="@+id/skillDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:textSize="15sp"
        android:text="被动技能："/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#1E000000"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/equipTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="推荐出装"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:id="@+id/equipCommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/equip1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/icon"/>
        <ImageView
            android:id="@+id/equip2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/icon"/>
        <ImageView
            android:id="@+id/equip3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/icon"/>
        <ImageView
            android:id="@+id/equip4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/icon"/>
        <ImageView
            android:id="@+id/equip5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/icon"/>
        <ImageView
            android:id="@+id/equip6"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/icon"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/equipName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >
        <TextView
            android:id="@+id/equipName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="虚空法杖"
            android:layout_marginEnd="8dp"/>
        <TextView
            android:id="@+id/equipName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="虚空法杖"
            android:layout_marginEnd="8dp"/>
        <TextView
            android:id="@+id/equipName3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="虚空法杖"
            android:layout_marginEnd="8dp"/>
        <TextView
            android:id="@+id/equipName4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="虚空法杖"
            android:layout_marginEnd="8dp"/>
        <TextView
            android:id="@+id/equipName5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="虚空法杖"
            android:layout_marginEnd="8dp"/>
        <TextView
            android:id="@+id/equipName6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="虚空法杖"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#1E000000"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/MingWenTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="推荐铭文"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:id="@+id/MingWen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/MingWen1img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/icon"/>
        <TextView
            android:id="@+id/MingWen1"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="虚空法杖"
            android:layout_marginEnd="8dp"/>
        <ImageView
            android:id="@+id/MingWen2img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/icon"/>
        <TextView
            android:id="@+id/MingWen2"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="虚空法杖"
            android:layout_marginEnd="8dp"/>
        <ImageView
            android:id="@+id/MingWen3img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/icon"/>
        <TextView
            android:id="@+id/MingWen3"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="虚空法杖"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#1E000000"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/playTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="玩法技巧"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/playCommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:textSize="15sp"
        android:text="玩法技巧："/>


</LinearLayout>




</ScrollView>