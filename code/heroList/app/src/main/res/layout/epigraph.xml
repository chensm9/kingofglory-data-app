    <RelativeLayout
        android:id="@+id/first"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        define:layout_constraintTop_toBottomOf="@+id/defineViewGroup"
        android:layout_gravity="center"
        android:background="#181c28"
        android:layout_weight="1"
        android:visibility="visible">
        <TextView
            android:id="@+id/sum"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="0"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="40sp"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"/>
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="铭文总等级"
            android:layout_below="@+id/sum"
            android:layout_centerHorizontal="true"
            android:textSize="23sp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"/>
        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:text="通用属性"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="#9ca3ad"/>
        <ListView
            android:id="@+id/lv"
            android:layout_width="130dp"
            android:layout_height="135dp"
            android:layout_below="@id/text2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp">
        </ListView>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_below="@+id/lv"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:onClick="clear"
            android:src="@drawable/clear_all"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/second"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        define:layout_constraintTop_toBottomOf="@+id/defineViewGroup"
        android:layout_gravity="center"
        android:background="#181c28"
        android:layout_weight="1"
        android:visibility="gone">
        <TextView
            android:id="@+id/text3"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:text="铭文更换"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="22sp"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"/>
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/text3"
            android:src="@drawable/button"
            android:layout_marginLeft="10dp"
            android:onClick="click3"/>
        <com.example.a17980.herolist.DefineView
            android:id="@+id/sample"
            android:layout_below="@id/text3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            define:epigraph_type="red"
            android:onClick="click1"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5级铭文:异变"
            android:layout_below="@+id/sample"
