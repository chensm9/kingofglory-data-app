<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:define="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="10dp">
    <com.example.a17980.herolist.DefineView
        android:id="@+id/sample"
        android:layout_width="40dp"
        android:layout_height="40dp"
        define:epigraph_type="red"
        define:layout_constraintTop_toTopOf="parent"
        define:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:layout_marginLeft="20dp"
        android:id="@+id/name"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:textColor="#05dbff"
        define:layout_constraintLeft_toRightOf="@id/sample"
        android:gravity="right"
       android:textSize="20sp"
        android:text="1级铭文：专注"/>
    <TextView
        android:id="@+id/sample_attr"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="暴击率 +0.3%\n暴击效果 +1.3%"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:textColor="#FFFFFF"
        define:layout_constraintLeft_toRightOf="@+id/sample"
        define:layout_constraintTop_toBottomOf="@+id/name"
        android:gravity="right"
        android:textSize="15sp"/>
</android.support.constraint.ConstraintLayout>